{
  "name": "flatout",
  "version": "0.7.6",
  "author": "Toshimitsu Takahashi",
  "license": "MIT",
  "description": "Lightweight Single-Page-Application framework for JavaScript",
  "main": "dist/flatout.js",
  "engines": {
    "node": ">=10.10"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "dist/*.js",
    "src"
  ],
  "scripts": {
    "lint": "eslint src/** spec/**",
    "test": "mocha --timeout 15000 test/client/**.test.js",
    "coverage": "nyc report --reporter=html",
    "debug": "node test/inner_debug.js",
    "dist": "./bin/dist.sh",
    "doc": "esdoc",
    "example": "node examples/server.js ."
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tilfin/flatout.git"
  },
  "keywords": [
    "view",
    "framework",
    "SPA"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.5.0",
    "koa": "^2.8.2",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-pino-logger": "^2.1.3",
    "koa-send": "^5.0.0",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "puppeteer": "^1.20.0",
    "puppeteer-to-istanbul": "^1.2.2",
    "rollup": "^1.22.0",
    "rollup-plugin-terser": "^4.0.4"
  }
}
